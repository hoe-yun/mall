	String errorMsg = "";
	
	//로그인 시도요청을 감지
	if(request.getParameter("customerId") != null && request.getParameter("customerPw")!= null){
		int customerNo = dao.loginCustomer(request.getParameter("customerId"), request.getParameter("customerPw"));
